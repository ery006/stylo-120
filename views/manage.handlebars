<html>
	<head>
		<title>Stylo</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="css/home.css">
		<link rel="stylesheet" href="css/profile.css">
		<link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-blue-grey.css">
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>

	</head>
	<body class="w3-theme-l5">
			<header class="w3-bar w3-card w3-theme">
			  <h1 class="myHeader">Manage Favorite Locations</h1>
			</header>

			<br>
		<div class="container text-center ">
		<!-- Favorites List -->
		<div class="list-group">

				{{#each locs}}
					<div id="mySelect">

							<p><h4>{{name}}</h4> </p>
							<div>{{description}}</div>
							<div>{{hours}}</div>
							<div>{{address}}</div>
							<div>{{seating}}</div>

						<!-- Delete button -->

						<a class="w3-button w3-hover-teal" onclick="myFunction()">Delete</a>
						<script>
						function myFunction() {
						  var x = document.getElementById("mySelect");
						  x.remove(2);
						}
						</script>
						<br>
					</div>
					<br>
	 			{{/each}}

					<!-- Add option -->

					<button data-toggle="collapse" data-target="#demo" class="w3-button w3-hover-teal">+</button>
					<br>
						<div id="demo" class="collapse">
							<form id="addFavorite" role="form" method="get" action="/addFavorite">
				    		<div class="form-group">
				      		<label for="name">Location</label>
				      		<input type="text" class="form-control" id="city" placeholder="Name of location" name="locName">
				    		</div>

					<!-- Submit Button  -->
				    		<input type="submit" id="submitBtn" class="w3-button w3-hover-teal " value="Add Favorite"></input>
							</form>
							<br>
							<br>
						</div>



				<!-- <a href="#" id="add" class="w3-button w3-hover-teal" role="button"><i class="fa fa-plus"></i></a>
				<div id="add" class="collapse">
					Lorem ipsum dolor text....
				</div> -->


				<br>
				<br>

			</div>
		</div>
	</div>

		<!-- Tabs -->
		<footer class="w3-row w3-theme" id="bottomBar">
			<!-- <div class="w3-row"> -->
			  <a href="/home" class="w3-button w3-hover-teal " role="button" id="bottomButton">Home</a>
			  <a href="/favoriteLocs" class="w3-button w3-hover-teal " role="button" id="bottomButton">Favorite</a>
			  <a href="/studyGroups" class="w3-button w3-hover-teal " role="button" id="bottomButton">Study Groups</a>
