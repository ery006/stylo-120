<html>
	<head>
		<title>Stylo</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="css/home.css">

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
		<script async defer type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCJdJ76C7tY7RfZpyaF3C5k4ysU_NkotzM"></script>
		<script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js">
	    </script>
	    <script src="https://cdn.rawgit.com/googlemaps/v3-utility-library/master/markerclustererplus/src/markerclusterer.js"></script>
		<script type="text/javascript" src="/js/map.js"></script>

	</head>

	<body onload="initMap()">
		<div class="text-center">
		  <h1>Stylo</h1>
		  <p>Welcome to Stylo!</p> 
		</div>

		<!-- Search bar -->
		<div class="container">
			<div class="row">
				<form>
			  		<input type="text" placeholder="Search.." name="search" class="searchbar">
			  	</form>
		  		<button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown"><i class="fa fa-filter"></i></button>
		  		<div class="dropdown-menu keep-open" id="myDropdown">
		  				<label>Distance</label>
		  				<div class="row" id="dropOptions">
		  					<radiogroup>
		  					<input type="checkbox" name="filter" id="close" class='chk-btn'>
							<label for='close'>~5mi</label>
		  					<input type="checkbox" name="filter" id="normalDist" class='chk-btn'>
							<label for='normalDist'>~10mi</label>
							<input type="checkbox" name="filter" id="far" class='chk-btn'>
							<label for='far'>~20mi</label>
							</radiogroup>
		  				</div>

		  				<label>Sound</label>
		  				<div class="row" id="dropOptions">
		  					<radiogroup>
		  					<input type="checkbox" name="filter" id="quiet" class='chk-btn'>
							<label for='quiet'>Quiet</label>
							<input type="checkbox" name="filter" id="normalSound" class='chk-btn'>
							<label for='normalSound'>Little Noise</label>
							<input type="checkbox" name="filter" id="loud" class='chk-btn'>
							<label for='loud'>Loud</label>
							</radiogroup>
		  				</div>

		  				<label>Price</label>
		  				<div class="row" id="dropOptions">
		  					<input type="checkbox" name="filter" id="free" class='chk-btn'>
							<label for='free'>Free</label>
							<input type="checkbox" name="filter" id="oneDollar" class='chk-btn'>
							<label for='oneDollar'>$</label>
							<input type="checkbox" name="filter" id="twoDollar" class='chk-btn'>
							<label for='twoDollar'>$$</label>
		  				</div>
					    
						<input type="checkbox" name="filter" id="dropOptions"> Wifi<br>
						<input type="checkbox" name="filter" id="dropOptions"> 24 Hour<br>
						<button type="button" onclick="favoriteMap()" class="btn btn-light" id="dropSubmit"> Submit </button>
				  	</div>
				</div>
		</div>

		<!-- Plus button and Map -->
		<div class="container">
			<div class="row">
				<div class="col"></div>
				<div class="col"></div>
				<div class="col"></div>
				<div class="col"></div>
				<div class="col"></div>
				<div class="col">
				 	<a href="/add" class="btn btn-light" role="button"><i class="fa fa-plus"></i></a>
				</div>
			</div>
			<div id="map"></div>
		</div>
    

		<!-- Tabs -->
		<div class="container" style="text-align: center">
			<div class="btn-group btn-group-lg">
			  <button type="button" onclick="initMap()" class="btn btn-light btn-lg">Home</button>
			  <button type="button" onclick="favoriteMap()" class="btn btn-light btn-lg">Favorite</button>
			  <button type="button" onclick="studyGroupsMap()" class="btn btn-light btn-lg">Study Groups</button>
			  <a href="/profile" class="btn btn-light btn-lg" role="button">Profile</a>
			  <!-- <button type="button" onclick="profilePage()" class="btn btn-light btn-lg">Profile</button> -->
			</div>
		</div>
	</body>
</html>